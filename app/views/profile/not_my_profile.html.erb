<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<%= image_tag @profile.avatar.url(:thumb), class: "avatar" %>

<p>
  <strong>Имя:</strong>
  <%= @profile.name %>
</p>
<p>
  <strong>Возраст:</strong>
  <%= @profile.age %>
</p>
<p>
  <strong>Город:</strong>
  <%= @profile.city %>
</p>

<p>
  <strong>Рейтинг:</strong>
  <%= @profile.rating %>
</p>

<p>
  <strong>Статус:</strong>
  <%= @profile.user.status.name %>
</p>
<% if admin? %>
	<%= link_to "Редактировать", profile_edit_path(@profile) %>
<% end %>
