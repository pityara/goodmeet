= form_for meeting, :html => { :multipart => true } do |f|
  - if meeting.errors.any?
    #error_explanation
      h2
        = pluralize(meeting.errors.count, "error")
        |  prohibited this meeting from being saved:
      ul
        - meeting.errors.full_messages.each do |message|
          li
            = message
  .field
    = f.label "Название"
    = f.text_field :title
  .field
    = f.label "Описание"
    = f.text_area :description
  .field
    = f.label "Требуемый рейтинг"
    = f.text_field :required_rating
  .field
    = f.label "Место"
    = f.text_field :address
  div
    = f.label "Фото"
    = f.file_field :image
  div
    = f.label "Дата"
    = f.text_field :date, id: "meeting_date"
  .actions
    = f.submit id: "form_button"
